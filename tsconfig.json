{
  "version": "2.0.2",
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true
  },
  "exclude": [
    "web",
    "build",
    "node_modules"
  ]
}
